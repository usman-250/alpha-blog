<h1>All Articles</h1>
<%= link_to 'Home page', root_path%><br>

<p><%= link_to 'Create New Article', new_article_path %></p>


<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Show</th> 
        <th>Delete</th> 
    </tr>

    <% @all_articles.each do |article| %>
    <tr>
        <td> <%= article.title %> </td>
        <td> <%= article.description %> </td>
        <td> <%= link_to 'Edit', edit_article_path(article.id) %></td>
        <td> <%= link_to 'Show', article_path(article.id) %></td>
        <td> <%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>

    </tr>
    <% end%>
</table>



